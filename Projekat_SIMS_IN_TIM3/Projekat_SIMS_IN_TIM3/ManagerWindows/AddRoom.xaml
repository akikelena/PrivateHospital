<Window x:Class="Projekat_SIMS_IN_TIM3.ManagerWindows.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_SIMS_IN_TIM3.ManagerWindows"
        mc:Ignorable="d"
        Title="AddRoom" Height="450" Width="800">
    <Grid>
        <Label Content="Adding New Room" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Black"/>
        <Label Content="*Note ALL fields are necessary" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Foreground="Red"/>
        <Label Content="Room Name:" HorizontalAlignment="Left" Margin="16,98,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="16,127,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="16,158,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="138,102,0,0" TextWrapping="Wrap" Text="{Binding Namew}" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=RoomTypes}" SelectedValue="{Binding Path=RoomTypeSelected}" Margin="138,132,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="138,162,0,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="39,226,0,0" VerticalAlignment="Top" Height="32" Width="84" Background="Lime" FontWeight="Bold" Click="Confirm_Button"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="163,226,0,0" VerticalAlignment="Top" Height="32" Width="84" Background="Red" FontWeight="Bold"/>
        <Label Content="Floor:" HorizontalAlignment="Left" Margin="16,186,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="138,190,0,0" TextWrapping="Wrap" Text="{Binding Floor}" VerticalAlignment="Top" Width="120" FontSize="16"/>

    </Grid>
</Window>
