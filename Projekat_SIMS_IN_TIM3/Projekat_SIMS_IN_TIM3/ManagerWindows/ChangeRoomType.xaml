<Window x:Class="Projekat_SIMS_IN_TIM3.ManagerWindows.ChangeRoomType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_SIMS_IN_TIM3.ManagerWindows"
        mc:Ignorable="d"
        Title="ChangeRoomType" Height="300" Width="300">
    <Grid>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=RoomTypes}" SelectedValue="{Binding Path=RoomTypeSelected}" Margin="150,100,0,0"/>
        <Label Content="New Room Type:&#xD;&#xA;" HorizontalAlignment="Left" Margin="29,98,0,0" VerticalAlignment="Top" Height="24"/>
        <Label Content="{Binding SelectedRoomId}" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Height="23" Width="20"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="39,201,0,0" VerticalAlignment="Top" Height="32" Width="84" Background="Lime" FontWeight="Bold" Click="Confirm_Button"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="163,201,0,0" VerticalAlignment="Top" Height="32" Width="84" Background="Red" FontWeight="Bold"/>
        <Label Content="Room id:" HorizontalAlignment="Left" Margin="83,38,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
