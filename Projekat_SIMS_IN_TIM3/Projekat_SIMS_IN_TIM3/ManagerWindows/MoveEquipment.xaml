<Window x:Class="Projekat_SIMS_IN_TIM3.ManagerWindows.MoveEquipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_SIMS_IN_TIM3.ManagerWindows"
        mc:Ignorable="d"
        Title="Move Equipment" Height="350" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.6*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Move Equipment" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <TextBlock Text="*Note ALL fields are necessary" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Foreground="Red" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        
        <TextBlock FontSize="16" Margin="0,0,0,0" TextWrapping="Wrap" Text="Equipment:"  Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        <Label FontWeight="Bold" Content="{Binding Path=SelectedEquipment }" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="33" Width="144"  FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        
        <TextBlock FontSize="16"  TextWrapping="Wrap" Text="Current Room:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        <Label FontWeight="Bold" Content="{Binding Path=CurrentRoom }" Height="35" Width="144" FontSize="16" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        
        <TextBlock FontSize="16" TextWrapping="Wrap" Text="Target Room:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Path=RoomNames}"  FontSize="16" SelectedValue="{Binding Path=RoomNameSelected}" Width="128" RenderTransformOrigin="0.5,0.5" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        
        <TextBlock FontSize="16" TextWrapping="Wrap" Text="Date of moving:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        <DatePicker Name="PickedDate"  Height="30" FontSize="16" Width="128" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        
        <Button Content="Confirm" Height="32" Background="Lime" FontWeight="Bold" Click="Confirm_Button" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"  HorizontalAlignment="Center" Width="100"/>
        <Button Content="Cancel"  Height="32" Background="Red" FontWeight="Bold" Click="Cancel_Button" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" Width="100"/>

    </Grid>
</Window>
