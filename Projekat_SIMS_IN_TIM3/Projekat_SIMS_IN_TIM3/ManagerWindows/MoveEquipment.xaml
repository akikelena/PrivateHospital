<Window x:Class="Projekat_SIMS_IN_TIM3.ManagerWindows.MoveEquipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_SIMS_IN_TIM3.ManagerWindows"
        mc:Ignorable="d"
        Title="Move Equipment" Height="300" Width="300">
    <Grid>
        <Label Content="Move Equipment" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Confirm" Margin="51,201,168,0" VerticalAlignment="Top" Height="32" Background="Lime" FontWeight="Bold" Click="Confirm_Button"/>
        <Button Content="Cancel" Margin="168,201,51,0" VerticalAlignment="Top" Height="32" Background="Red" FontWeight="Bold" Click="Cancel_Button"/>
        <DatePicker Name="PickedDate" HorizontalAlignment="Left" Margin="145,117,0,0" VerticalAlignment="Top" Height="24" Width="104"/>
        <Label Content=" New Room:" HorizontalAlignment="Left" Margin="43,84,0,0" VerticalAlignment="Top" Height="27" Width="89"/>
        <Label Content="Date of moving:" HorizontalAlignment="Left" Margin="51,116,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="137,87,0,0"  ItemsSource="{Binding Path=RoomNames}" SelectedValue="{Binding Path=RoomNameSelected}" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
