<Window x:Class="Projekat_SIMS_IN_TIM3.PatientXAML.Notifications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_SIMS_IN_TIM3.PatientXAML"
        mc:Ignorable="d"
        Title="Notifications" Height="450" Width="800">
    <Grid>
        <ListView x:Name="DataBinding1" Margin="10,61,29,153">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Id: "/>
                        <TextBlock Text="{Binding Id}" FontWeight="Bold"/>
                        <TextBlock Text="   "/>
                        <TextBlock Text="Name: "/>
                        <TextBlock Text="{Binding MedicineName}" FontWeight="Bold"/>
                        <TextBlock Text="   "/>
                        <TextBlock Text="Time: "/>
                        <TextBlock Text="{Binding Time}" FontWeight="Bold"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
